<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.seekers.wheresmystuff.HomeScreenActivity">

    <TextView
        android:text="Welcome to the application!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeWelcome"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.306" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:onClick="onLogoutPressed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFoundItems"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="52dp" />

    <Button
        android:id="@+id/lostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/enterItems"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/enterItems" />

    <TextView
        android:id="@+id/enterItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Lost Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/homeWelcome"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/homeWelcome" />

    <TextView
        android:id="@+id/viewLostItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Lost Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/lostButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lostButton" />

    <Button
        android:id="@+id/viewLostItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onViewLostItemsClicked"
        android:text="View Items"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLostItemsLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/viewLostItemsLabel" />

    <Button
        android:id="@+id/enterFoundItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/foundItemsLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/foundItemsLabel"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/foundItemsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Found Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLostItems"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/viewLostItems"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/foundlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Found Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/viewFoundItems"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/viewFoundItems"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/viewFoundItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Items"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/viewLostItems"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="128dp"
        app:layout_constraintLeft_toLeftOf="@+id/enterFoundItemsButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/searchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Lost Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="39dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="157dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/foundSearchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Found Items"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/searchFoundItemsButton"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="21dp" />

    <Button
        android:id="@+id/searchLostItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="9dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/searchLabel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/searchLabel" />

    <Button
        android:id="@+id/searchFoundItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/searchLostItemsButton"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/searchLostItemsButton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/searchLostItemsButton" />
</android.support.constraint.ConstraintLayout>
